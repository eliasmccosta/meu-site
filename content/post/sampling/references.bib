file = {::},
issn = {2167-9843},
journal = {PeerJ Preprints},
keywords = {R statistical computing,geostatistics,kriging,pedometrics,predictive modeling,random forest,sampling,spatial data,spatiotemporal data},
pages = {e26693v3},
title = {{Random Forest as a generic framework for predictive modeling of spatial and spatio-temporal variables}},
url = {https://doi.org/10.7287/peerj.preprints.26693v3},
volume = {6},
year = {2018}
}
