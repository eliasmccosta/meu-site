isbn = {0016-7061},
issn = {00167061},
journal = {Geoderma},
keywords = {Classification trees,Polygon disaggregation,Soil-landscape models,Spatial disaggregation,Uncertainty,Variable importance},
pages = {385--399},
publisher = {Elsevier B.V.},
title = {{Semi-automated disaggregation of conventional soil maps using knowledge driven data mining and classification trees}},
url = {http://dx.doi.org/10.1016/j.geoderma.2013.08.024},
