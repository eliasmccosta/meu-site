doi = {10.1016/j.geoderma.2012.08.020},
file = {::},
journal = {Geoderma},
number = {0},
pages = {341--353},
title = {{A methodology for digital soil mapping in poorly-accessible areas}},
url = {http://www.sciencedirect.com/science/article/pii/S0016706112003151},
volume = {192},
