journal = {Geoderma},
keywords = {Digital soil mapping,GlobalSoilMap,Model comparison,Soil organic carbon,SoilGrids1km},
pages = {16--34},
publisher = {Elsevier B.V.},
title = {{National versus global modelling the 3D distribution of soil organic carbon in mainland France}},
