doi = {10.1016/j.geoderma.2013.06.005},
file = {::},
issn = {00167061},
journal = {Geoderma},
keywords = {Legacy soil data,Pedotransfer functions,Remote sensing,Uncertainty},
pages = {168--176},
publisher = {Elsevier B.V.},
title = {{Combining Vis-NIR hyperspectral imagery and legacy measured soil profiles to map subsurface soil properties in a Mediterranean area (Cap-Bon, Tunisia)}},
url = {http://dx.doi.org/10.1016/j.geoderma.2013.06.005},
