pages = {394--401},
title = {{Variabilidade espacial das fra{\c{c}}{\~{o}}es da mat{\'{e}}ria org{\^{a}}nica do solo em {\'{a}}rea degradada sob recupera{\c{c}}{\~{a}}o}},
volume = {19},
year = {2015}
