isbn = {1471-2105},
issn = {1471-2105},
journal = {BMC Bioinformatics},
keywords = {Algorithms,Bias (Epidemiology),Biological,Computational Biology,Computational Biology: methods,Computer Simulation,Data Interpretation,Genomics,Genomics: methods,Models,Population Dynamics,Statistical},
pages = {25},
pmid = {17254353},
title = {{Bias in random forest variable importance measures: illustrations, sources and a solution.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/17254353},
volume = {8},
year = {2007}
}
