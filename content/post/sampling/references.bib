file = {:media/elias/84670c79-1b5e-40e3-b675-321c40617d83/elias/C/Mendeley Desktop/Vogel et al/SOIL/Vogel et al., 2018.pdf:pdf;:media/elias/84670c79-1b5e-40e3-b675-321c40617d83/elias/C/Mendeley Desktop/Brus et al/Geoderma/Brus, 2019.pdf:pdf},
