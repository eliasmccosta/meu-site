doi = {10.1007/s11104-010-0425-z},
file = {::},
isbn = {0032-079X},
issn = {0032079X},
journal = {Plant and Soil},
keywords = {China,Classification and Regression Trees (CART),Grassland,Soil organic carbon (SOC)},
number = {1},
pages = {7--24},
title = {{Digital mapping of soil organic matter stocks using Random Forest modeling in a semi-arid steppe ecosystem}},
volume = {340},
year = {2011}
}
