keywords = {Hot-spot areas,Revised universal soil loss equation,Sediment delivery ratio,Sediment deposition,Watershed},
number = {3},
pages = {221--230},
publisher = {Elsevier B.V.},
title = {{Estimating landscape susceptibility to soil erosion using a GIS-based approach in Northern Ethiopia}},
url = {http://dx.doi.org/10.1016/j.iswcr.2017.05.002},
volume = {5},
year = {2017}
}
