number = {18},
pages = {3871--3879},
pmid = {20004002},
publisher = {Elsevier B.V.},
title = {{Ecological vulnerability in risk assessment - A review and perspectives}},
url = {http://dx.doi.org/10.1016/j.scitotenv.2009.11.009},
volume = {408},
year = {2010}
}
