doi = {10.1016/j.geoderma.2018.04.004},
file = {::},
issn = {00167061},
journal = {Geoderma},
keywords = {Accuracy,Digital soil mapping,Pedometrics,Regression kriging,Soil spatial predictions models},
number = {October 2017},
pages = {22--41},
publisher = {Elsevier},
title = {{Regression kriging as a workhorse in the digital soil mapper's toolbox}},
