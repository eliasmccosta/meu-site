keywords = {Biogeography,Biome model,Ecological niche model,Map comparison,Plant functional types,Random forest},
number = {3-4},
pages = {32},
publisher = {The Science of Nature},
title = {{Combining climatic and soil properties better predicts covers of Brazilian biomes}},
volume = {104},
year = {2017}
}
